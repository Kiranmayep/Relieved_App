<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoodActivity">


    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#00BFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/ic_wave__13_"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:layout_editor_absoluteX="0dp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="413dp"
        android:layout_height="510dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints,UnknownId"
        tools:layout_editor_absoluteX="-2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="30dp">


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10sp"
                android:columnCount="1"
                android:rowCount="4">

                <androidx.cardview.widget.CardView
                    android:id="@+id/badd"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="20dp">

                    <ImageView
                        android:id="@+id/bad"
                        android:layout_width="83dp"
                        android:layout_height="94dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/bad" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <SeekBar
                            android:id="@+id/seekBar1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="110dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            app:layout_constraintHorizontal_bias="0.0"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/track"
                            android:thumb="@drawable/thumb" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/rate1"
                            android:layout_marginTop="60dp"
                            android:layout_marginLeft="110dp"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="37dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/angryy"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="20dp">

                    <ImageView
                        android:id="@+id/angry"
                        android:layout_width="83dp"
                        android:layout_height="94dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/angry" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <SeekBar
                            android:id="@+id/seekBar2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="110dp"
                            android:layout_marginTop="30dp"
                            android:layout_weight="1"
                            app:layout_constraintHorizontal_bias="0.0"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/track"
                            android:thumb="@drawable/thumb" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/rate2"
                            android:layout_marginTop="70dp"
                            android:layout_marginLeft="110dp"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="37dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/neutrall"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="20dp">

                    <ImageView
                        android:id="@+id/neutral"
                        android:layout_width="83dp"
                        android:layout_height="94dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/neutral" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <SeekBar
                            android:id="@+id/seekBar3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="110dp"
                            android:layout_marginTop="30dp"
                            android:layout_weight="1"
                            app:layout_constraintHorizontal_bias="0.0"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/track"
                            android:thumb="@drawable/thumb" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/rate3"
                            android:layout_marginTop="70dp"
                            android:layout_marginLeft="110dp"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="37dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/happyy"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="20dp">

                    <ImageView
                        android:id="@+id/happy"
                        android:layout_width="83dp"
                        android:layout_height="94dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/happy" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <SeekBar
                            android:id="@+id/seekBar4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="110dp"
                            android:layout_marginTop="30dp"
                            android:layout_weight="1"
                            app:layout_constraintHorizontal_bias="0.0"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/track"
                            android:thumb="@drawable/thumb" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/rate4"
                            android:layout_marginTop="70dp"
                            android:layout_marginLeft="110dp"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="37dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/toohappyy"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="20dp">

                    <ImageView
                        android:id="@+id/toohappy"
                        android:layout_width="83dp"
                        android:layout_height="94dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/toohappy" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <SeekBar
                            android:id="@+id/seekBar5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="110dp"
                            android:layout_marginTop="30dp"
                            android:layout_weight="1"
                            app:layout_constraintHorizontal_bias="0.0"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/track"
                            android:thumb="@drawable/thumb" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/rate5"
                            android:layout_marginTop="70dp"
                            android:layout_marginLeft="110dp"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="37dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </GridLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    style="@style/Cursive"
                    android:background="#00BFFF"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="40dp" />
                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:background="#00BFFF"
                    android:gravity="center"
                    style="@style/Cursive"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="40dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Moodify"
        style="@style/Cursive"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="50dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>